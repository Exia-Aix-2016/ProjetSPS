$TTL 604800     ; 1 semaine
$ORIGIN {{ subnet_reverse_ip }}.in-addr.arpa.
@       IN SOA  ns1.{{ name_zone }}. root.{{ name_zone }}. (
                                2013020905 ;serial
                                3600       ; refresh (1 hour)
                                3000       ; retry (50 minutes)
                                4619200    ; expire (7 weeks 4 days 11 hours 6 minutes 40 seconds)
                                604800     ; minimum (1 week)
                                )

@                                       IN      NS        ns1.{{ name_zone }}.
@                                       IN      NS        ns2.{{ name_zone }}.
{{ last_ip_digit_primaryinfra }}        IN      PTR       ns1.{{ name_zone }}.
{{ last_ip_digit_secondaryinfra }}      IN      PTR       ns2.{{ name_zone }}.
{{ last_ip_digit_dns_webservice }}      IN      PTR       {{ name_zone }}.
